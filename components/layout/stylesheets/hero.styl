@import '../../stylus_lib'

.hero
  background: black
  color: white
  position: fixed
  width: 100%
  height: 100%
  z-index: 1
  top: 0px
  h1, h2, .heading
    width: 300px
  h1
    font-size: 47px
    line-height: 102%
  h2
    font-size: 24px
    margin-top: 19px
    margin-bottom: 50px
  .heading
    avant-garde()
    font-size: 14px
    margin-bottom: 9px
  .content
    width: 350px
    position: absolute
    right: 0px
    top: 0px
    opacity(0)
    z-index: 8
    transition(opacity, 0.4s)
    &.visible
      opacity(1)
  .bordered-input
    width: 239px

  .apple-copy
    text-align: center
    font-size: 13px
    width: 100%
    position: absolute
    bottom: 20px
    color: #AAA

  .share
    avant-garde()
    margin-top: 36px
    font-size: 14px

    .facebook-icon, .twitter-icon
      background-size contain
      background-repeat no-repeat
      background-position left center
      height: 20px
      width: 20px
      display: inline-block
      margin-left: 16px
      padding-left: 30px
      width: 86px
      cursor: pointer
      transition: opacity 0.4s
      opacity(1)
      &:hover
        opacity(0.7)

    .facebook-icon
      background-image url('/images/icon_facebook_white.png') !important
    .twitter-icon
      width: 62px
      background-image url('/images/icon_twitter_white.png') !important

  .splash-image
    background-size contain
    background-repeat no-repeat
    background-position center center
    background-size: auto 100%
    width: 100%
    height: 100%
    transition: opacity 0.4s
    opacity(0)
    position: absolute
    top: 0px
    z-index: 5
    &.active
      opacity(1)
  .splash-image-1
    background-image url('/images/splash/01intro.jpg') !important
  .splash-image-2
    background-image url('/images/splash/02intro.jpg') !important
  .splash-image-3
    background-image url('/images/splash/03intro.jpg') !important
  .splash-image-4
    background-image url('/images/splash/04intro.jpg') !important
  .splash-image-5
    background-image url('/images/splash/05intro.jpg') !important
  .splash-image-6
    background-image url('/images/splash/06intro.jpg') !important
  .splash-image-7
    background-image url('/images/splash/07intro.jpg') !important
  .splash-image-8
    background-image url('/images/splash/08intro.jpg') !important
  .splash-image-9
    background-image url('/images/splash/09intro.jpg') !important
  .splash-image-10
    background-image url('/images/splash/10intro.jpg') !important
