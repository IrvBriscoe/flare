@import '../../stylus_lib'

.hero
  background: black
  color: white
  position: fixed
  width: 100%
  height: 100%
  z-index: 1
  top: 0px
  h1, h2, .heading
    width: 300px
  h1
    font-size: 47px
    line-height: 102%
  h2
    font-size: 24px
    margin-top: 19px
    margin-bottom: 50px
  .heading
    avant-garde()
    font-size: 14px
    margin-bottom: 9px
  .content
    width: 350px
    position: absolute
    right: 0px
    top: 0px
    opacity(0)
    z-index: 8
    transition(opacity, 0.4s)
    &.visible
      opacity(1)
  .bordered-input
    width: 239px

  .splash-image
    background-size contain
    background-repeat no-repeat
    background-position center center
    background-size: auto 100%
    width: 100%
    height: 100%
    transition: opacity 0.4s
    opacity(0)
    position: absolute
    top: 0px
    z-index: 5
    &.active
      opacity(1)
  .splash-image-1
    background-image url('/images/splash/01intro.jpg') !important
