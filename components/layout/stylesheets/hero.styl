@import '../../stylus_lib'

.hero
  background: black
  color: white
  position: fixed
  width: 100%
  height: 100%
  z-index: 1
  top: 0px
  h1, h2, .heading
    width: 300px
  h1
    font-size: 47px
    line-height: 102%
  h2
    font-size: 24px
    margin-top: 19px
    margin-bottom: 50px
  .heading
    avant-garde()
    font-size: 14px
    margin-bottom: 9px
  .content
    width: 350px
    position: absolute
    right: 0px
    top: 0px
    opacity(0)
    z-index: 8
    transition(opacity, 0.4s)
    &.visible
      opacity(1)
    @media media-query
      display: none

  .bordered-input
    width: 229px

  .apple-copy
    text-align: center
    font-size: 13px
    width: 100%
    position: absolute
    bottom: 5px
    color: #AAA
    padding: 0px 20px
    margin: 0px auto
    box-sizing: border-box

  .share
    avant-garde()
    margin-top: 36px
    font-size: 14px

    .facebook-icon, .twitter-icon
      background-size contain
      background-repeat no-repeat
      background-position left center
      height: 20px
      width: 20px
      display: inline-block
      margin-left: 16px
      padding-left: 30px
      width: 86px
      cursor: pointer
      transition: opacity 0.4s
      opacity(1)
      &:hover
        opacity(0.7)

    .facebook-icon
      background-image url('/images/icon_facebook_white.png') !important
    .twitter-icon
      width: 62px
      background-image url('/images/icon_twitter_white.png') !important
