  .splash-image-1
    background-image url('/images/splash/01intro.png') !important
  .splash-image-2
    background-image url('/images/splash/02intro.png') !important
  .splash-image-3
    background-image url('/images/splash/03intro.png') !important
  .splash-image-4
    background-image url('/images/splash/04intro.png') !important
  .splash-image-5
    background-image url('/images/splash/05intro.png') !important
  .splash-image-6
    background-image url('/images/splash/06intro.png') !important
  .splash-image-7
    background-image url('/images/splash/07intro.png') !important
  .splash-image-8
    background-image url('/images/splash/08intro.png') !important

.phone-content-area
  position: absolute
  width: 100%
  margin-left: 0.8% // todo figure out why the phone is off center

#content
  margin-top: 1000px
  margin-bottom: 1000px
  position: relative
  z-index: 10

#iphone
  position: fixed
  width: 100%
  overflow: hidden
  text-align: center
  z-index: 11
  max-height: 807px
  height: 84%
  transition: opacity 0.4s
  opacity(0)
  .phone
    background-size contain
    background-repeat no-repeat
    background-position center center
    background-image url('/images/phone.png') !important
    background-size: auto 100%
    width: 100%
    height: 100%
  .reflection
    background-size contain
    background-repeat no-repeat
    background-position center center
    background-image url('/images/phone-reflection.png') !important
    position: absolute
    top: 14.76%
    right: 7.7%
    background-size: auto 100%
    width: 39.79%
    height: 53.407%
  &.visible
    opacity(1)

.app-header
  position: fixed
  transition: top 0.4s
  top: -64px
  left: 0px
  width: 100%
  z-index: 10
  overflow: hidden
  height: 64px
  &.visible
    top: 0px
  .app-store
    background-size contain
    background-repeat no-repeat
    background-position center center
    height: 50px
    background-image url('/images/app-store.svg') !important
    width: 150px
    float: right
    right: 16px
  .app-store, .header-logo
    top: 16px
    position: absolute
  .header-logo
    left: 16px
  .links
    text-align: center
    a
      avant-garde()
      text-decoration: none
      margin: 16px 19px
      padding: 9px 20px
      display: inline-block
      border-top: 4px solid white
      font-size: 13px
      transition: color 0.4s, border-color 0.4s
      &:first-child
        margin-left: 0px
      &:last-child
        margin-right: 0px
      &:hover, &.active
        color: highlight-color !important
        border-color: highlight-color !important

  &.black
    background: black
    .links a
      color: white
      border-color: white
    .header-logo
      background-image url('/images/artsy-logotype-white.svg') !important
  &.white
    background: white
    .links a
      color: black
      border-color: black
    .header-logo
      background-image url('/images/artsy-logotype-black.svg') !important
