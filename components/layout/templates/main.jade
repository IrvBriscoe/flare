extends ./scaffold

mixin header
  header.app-header
    .links
      a( href= "/#browse" data-section-name='browse' ) Browse Shows & Fairs
      a( href= "/#explore" data-section-name='explore' ) Explore 60,000 Artworks
      a( href= "/#collect" data-section-name='collect' ) Collect With Artsy
    a.header-logo( href= sd.ARTSY_URL )
    a.app-store( href= sd.IPHONE_APP_URL )

mixin hero
  .hero
    .splash-images.phone-content-area
      .splash-image.splash-image-1.active
      .splash-image.splash-image-2
      .splash-image.splash-image-3
      .splash-image.splash-image-4
      .splash-image.splash-image-5
      .splash-image.splash-image-6
      .splash-image.splash-image-7
      .splash-image.splash-image-8
      .splash-image.splash-image-9
      .splash-image.splash-image-10
    .content.text-container
      h1 The art world in your pocket
      h2 Introducing Artsy for iPhone
        sup &copy;
      #sms.sms
        .heading send a link to your phone
        .error
        .success
        input.phone_number.bordered-input( placeholder = "Enter your phone number" )
        button.avant-garde-box-button.avant-garde-box-button-grey( type = "submit" ) OK
        .share share on
          .facebook-icon facebook
          .twitter-icon twitter
     .apple-copy Apple, the Apple logo and the iPhone are trademarks of Apple Inc. registered in the U.S. and other countries. App Store is a service mark of Apple Inc.

mixin iphone
  #iphone
    .phone
    .reflection
    .content

block body
  mixin hero
  mixin header
  mixin iphone
  #content
    block content
  #arrow
